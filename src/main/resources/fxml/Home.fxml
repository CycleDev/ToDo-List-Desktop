<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="550.0" prefWidth="420.0"
	xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="nao.cycledev.todolist.desk.HomeController">

		<TableView fx:id="tvEvents" layoutX="14.0" layoutY="14.0"
			prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="50.0"
			AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
			AnchorPane.topAnchor="10.0">
			<columns>
				<TableColumn editable="false" prefWidth="38.0" sortable="false" />
				<TableColumn fx:id="colEventTitle" editable="false"	prefWidth="357.0" text="Event" />
			</columns>
		</TableView>
		<HBox alignment="CENTER" layoutX="34.0" layoutY="500.0"
			prefHeight="35.0" prefWidth="400.0" spacing="10.0"
			AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"
			AnchorPane.rightAnchor="10.0">
				<Button mnemonicParsing="false" onAction="#handleNewEvent" styleClass="button-new" />
				<Button mnemonicParsing="false" onAction="#handleEditEvent"	styleClass="button-edit" />
				<Button mnemonicParsing="false"	onAction="#handleDeleteEvent" styleClass="button-delete" />
		</HBox>
</AnchorPane>
